<Window x:Class="SDScan.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dash SDScanner" 
	Height="400" Width="400"
	WindowStartupLocation="CenterScreen" 
	AllowsTransparency="true"
	WindowStyle="None"
	ResizeMode="NoResize" 
	Background="Transparent">

    <Grid>
	<Canvas Height="26" Width="400" VerticalAlignment="Top" Background="#040404" MouseDown="mBarDrag">
	    <Canvas.Children>
		<Button Background="#040404" Foreground="White" 
		    Height="26" Width="32" FontSize="17" 
		    MouseDown="mBarExit" Content="X" 
		    BorderThickness="0" HorizontalAlignment="Right" Canvas.Left="367">
		</Button>
	    </Canvas.Children>
	</Canvas>

	<Canvas Height="375" Margin="0,25,0,0" Background="#0f0f0f" VerticalAlignment="Top" HorizontalAlignment="Left" Width="400">
	    <Border Height="375" Width="400" BorderThickness="2" BorderBrush="#040404">

	    </Border>
	</Canvas>
    </Grid>
</Window>
